                "operationId": "dfc4971a123cbd74fb0411dd5ffcfdbe",
                "parameters": [
                    {
                        "name": "keyword",
                        "in": "query",
                        "description": "Filtre par mot clé dans le titre",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "rating",
                        "in": "query",
                        "description": "Filtre par rating du film",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "minLength",
                        "in": "query",
                        "description": "Longueur minimale du film",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "maxLength",
                        "in": "query",
                        "description": "Longueur maximale du film",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
